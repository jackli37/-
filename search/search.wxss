/* pages/search/search.wxss */
.search{
  width: 80%;
}
.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.search_arr input{
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
}
.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}
 
.sousuo {
  margin-left: 15rpx;
  width: 15%;
  line-height: 150%;
  text-align: center;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  
}
.page_row{
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #d0d0d0;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left:25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}
/*goods*/
.goods {
  display: flex;
  height: 200rpx;
  border-bottom: 1px solid #ccc;
  padding: 20rpx;
}

.hcls {
  background: #fff
}

.goods-l {
  flex: 1;
  /* background: pink; */
  display: flex;
  justify-content: center;
  align-items: center;
}

.goods-l image {
  width: 90%;
  height: 90%; 
}

.goods-r {
  padding: 10px 15px;
  flex: 2;
  /* background: yellowgreen; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-r-t {

  /* background: red; */
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  color: red;
}

.goods-r-m {
  /* background: blue; */
  color: #999;
  font-size: 14px;
  display: flex;
  justify-content: flex-end;
}

.goods-r-b {
 
  /* background: blue; */
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}



.goods-r-b text {
  background: rgba(154, 205, 50, .3);
  margin-right: 5px;
}
.goods-r-b text:nth-child(2) {
  background: rgba(69, 243, 121, 0.3);
  margin-right: 5px;
}
.goods-r-b text:nth-child(3) {
  background: rgba(85, 10, 224, 0.3);
  margin-right: 5px;
}


.order {
  background: orange;
  color: #fff;
  padding: 3px 10px;
  border-radius: 2px;
}
